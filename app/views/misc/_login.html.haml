- if user_signed_in?
  %span= "Hi, #{user_name(current_user)}"
  .controls
    = link_to glyph('signout'), destroy_user_session_path, method: :delete
- else
  %span Sign in with:
  .providers
    = link_to glyph('twitter'), user_omniauth_authorize_path(provider: :twitter)
    = link_to glyph('facebook'), user_omniauth_authorize_path(provider: :twitter)
