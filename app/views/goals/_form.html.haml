= form_for @goal || Goal.new, url: goals_path, :html => { :class => 'form-horizontal large' } do |f|
  - if @goal.errors.any?
    .alert.alert-danger
      %b Error!
      You must include a numeric quantity in your goal ("I will run 300 miles.")
  .form-group
    = f.text_field :description, class: 'form-control', autofocus: false, value: 'This year I will '
  = f.submit "Submit", :disable_with => 'Submiting...', class: 'btn btn-large btn-primary'
  .pull-right
    %span.quantity
      X

